{
    "name": "daltri-menu-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "engines": {
        "node": ">=20.9.0"
    },
    "scripts": {
        "dev": "npm run dev --workspaces --if-present",
        "db:generate": "npm run db:generate -w api",
        "build": "npm run db:generate && npm run build --workspaces",
        "start": "npm start -w web",
        "start:web": "npm start -w web",
        "start:api": "npm start -w api",
        "test": "npm run test --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present"
    },
    "devDependencies": {
        "prettier": "^3.0.0",
        "eslint": "^8.0.0",
        "typescript": "^5.0.0"
    }
}